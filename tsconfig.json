{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ]
}
